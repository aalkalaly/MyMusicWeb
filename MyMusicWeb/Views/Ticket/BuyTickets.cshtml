@model MyMusicWebViewModels.Ticket.BuyTicketViewModel
@{
    ViewData["Title"] = "Buy Tickets";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="BuyTickets" method="post" enctype="multipart/form-data">

            <div class="mb-2">
                <label asp-for="@Model.Count" class="form-label-add-edit">Count of tickets</label>
                <input asp-for="@Model.Count" class="form-control" aria-required="true" placeholder="Enter the count of tickets" />
                <span asp-validation-for="@Model.Count" class="text-danger"></span>
            </div>


            <div class="d-flex justify-content-between align-items-center">
                <div class="mb-2">
                    <input class="btn btn-primary d-flex justify-content-center align-items-center flex-fill mx-1" type="submit" value="Save" />
                </div>
                
                <a asp-controller="Event" asp-action="Details" class="btn btn-warning d-flex justify-content-center align-items-center flex-fill mx-1">Back</a>

                
            </div>
            
            
        </form>
    </div>
</div>



