@model MyMusicWebViewModels.Event.EventEditViewModel
@{
    ViewData["Title"] = "Edit Event";
    var today = DateTime.Now.ToString("dd-MM-yyyy");
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.Name" class="form-label-add-edit">Product Name</label>
                    <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.Date" class="form-label-add-edit">Date</label>
                    <input asp-for="@Model.Date" class="form-control" aria-required="true" value="@(string.IsNullOrEmpty(Model.Date.ToString()) ? today : Model.Date)" />
                    <span asp-validation-for="@Model.Date" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6 mb-2">
                <label asp-for="@Model.PricePerTicket" class="form-label-add-edit">Price</label>
                <div class="input-group">
                    <span class="input-group-text">€</span>
                    <input asp-for="PricePerTicket" class="form-control" aria-required="true" type="number" step="0.01" min="0" />
                </div>
                <span asp-validation-for="@Model.PricePerTicket" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="2"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.ImageUrl" class="form-label-add-edit">ImageURL</label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="false" placeholder="Enter image URL (optional)" />
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label asp-for="@Model.Count" class="form-label-add-edit">Count of tickets</label>
                <input asp-for="@Model.Count" class="form-control" aria-required="true" placeholder="Enter the count of tickets" />
                <span asp-validation-for="@Model.Count" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.LocationId" class="form-label-add-edit">Select Location</label>
                    <select asp-for="@Model.LocationId" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.Locations, "Id", "Name", "Adress"))">
                        <option value="">Select Location...</option>
                    </select>
                    <span asp-validation-for="@Model.LocationId" class="text-danger"></span>
                </div>
            </div>
            <div class="row">

                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.GenraId" class="form-label-add-edit">Genra</label>
                    <select asp-for="@Model.GenraId" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.Genras, "Id", "Name"))">
                        <option value="">Select Genra...</option>
                    </select>
                    <span asp-validation-for="@Model.GenraId" class="text-danger"></span>
                </div>
            </div>
            
            <div class="mb-2">
                <input class="btn btn-warning btn-dark-text w-100 py-2 fw-bold rounded" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div> 