@{
    ViewBag.Title = "Welcome to MyMusicWeb!";
}

<!-- Title Section -->
<div class="container text-center my-5">
    <h1 class="display-4">@ViewBag.Title</h1>
    <p class="lead">Discover music events and amazing prices for any music instruments.</p>
    <hr class="my-4">
</div>

<!-- Welcome Section -->
<div class="bg-dark text-white text-center py-5">
    <div class="container">
        <h2 class="display-5 fw-bold">Find what ever you need for your hobby</h2>
        <p class="mb-4">Don't miss out on the music events held in Sofia</p>
        <a asp-controller="Event" asp-action"Index" class="btn btn-primary btn-lg mx-2">Explore Events</a>
        <a asp-controller="MusicInstruments" asp-action="Index" class="btn btn-secondary btn-lg mx-2">Browse Music Instruments</a>
    </div>
</div>

<!-- Featured Section -->
<div class="container my-5">
    <h3 class="text-center mb-4">Popular Choices</h3>
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="card p-4 text-center">
                <h5 class="card-title">Top Events of the Month</h5>
                <p class="card-text">Experience the best movie-going environment in our top-rated cinema.</p>
                <<a asp-controller="Event" asp-action"Index" class="btn btn-primary">Explore Events</a>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card p-4 text-center">
                <h5 class="card-title">Must-Watch Movie</h5>
                <p class="card-text">Catch the latest blockbuster that everyone’s talking about.</p>
                <a asp-controller="MusicInstruments" asp-action="Index" class="btn btn-primary">Browse Music Instruments</a>
            </div>
        </div>
    </div>
</div>